/* pages/mine/mine.wxss */

.grey-bg {
  background-color: #f6f6f6;
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.userinfo-default {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-image: url("data:image/png;base64,");
  background-size: cover;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-click {
  font-size: 32rpx;
  background-color: #f6f6f6;
}

button::after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
}

.set-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}

.set-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.set-text {
  font-size: 32rpx;
  margin-left: 30rpx;
}

.right-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}
