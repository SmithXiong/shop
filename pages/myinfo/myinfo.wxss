/* pages/myinfo/myinfo.wxss */
.grey-bg {
  background-color: #f6f6f6;
  padding:20rpx 0 20rpx 0;
}

.set-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}

.set-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.set-right {
  width: 75%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.set-text {
  font-size: 32rpx;
  margin: 0 30rpx 0 30rpx;
  text-align: left;
}

.avatar {
  height: 168rpx;
}

.avatar-img {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.right-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}
