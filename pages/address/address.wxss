/* pages/address/address.wxss */
.grey-bg {
  background-color: #f6f6f6;
  padding:20rpx 0 20rpx 0;
}

.form {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.section {
  width: 92%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  font-size: 32rpx;
  margin: 20rpx 0 20rpx 0;
  padding: 0 4% 0 4%;
  position: relative;
}

.section-title {
  width: 25%;
}

.form-input {
  width: 100%;
  position: relative;
  margin: 0 40rpx 0 15rpx;
}

.position {
  position: absolute;
  right: 20rpx;
  top: 22.5rpx;
  width: 40rpx;
  height: 55rpx;
}

.submit {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #d6332a;
  font-size: 32rpx;
  color: #f6f6f6;
  position: fixed;
  bottom: 20rpx;
  left:5%;
}