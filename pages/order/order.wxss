/* pages/order/order.wxss */
.grey-bg {
  background-color: #f6f6f6;
  padding:15rpx 0 15rpx 0;
}

.addrview {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
  margin: 20rpx 0 20rpx 0;
}

.addrlist {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.name {
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0 5rpx 30rpx;
}

.noaddr {
  height: 80rpx;
  line-height: 80rpx;
  color: #aaa;
  margin: 10rpx 0 10rpx 30rpx;
}

.phone {
  margin-left: 40rpx;
}

.address {
  height: 80rpx;
  line-height: 40rpx;
  color: #aaa;
  padding-bottom: 10rpx;
  margin: 5rpx 0 10rpx 30rpx;
}

.bottom-container {
  width: 100%;
  height: 120rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 2
}

.cart-pic {
  width: 120rpx;
  height: 100%;
  border-right: 2rpx solid #f6f6f6
}

.cart-image {
  width: 100%;
  height: 100%;
}

.bottom-info {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  font-size: 32rpx;
  padding: 0 0 25rpx 25rpx;
}

.bottom-settle {
  width: 30%;
  background-color: #d6332a;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn-settle {
  font-size: 34rpx;
}

.margin-right {
  margin-right: 30rpx;
}

.red {
  color: #d6332a;
}

.right-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}