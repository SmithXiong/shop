/* pages/order/order.wxss */
.grey-bg {
  background-color: #f6f6f6;
  padding:0 0 15rpx 0;
  margin-bottom: 120rpx;
}

.header {
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 10rpx 0 10rpx 0;
  margin: 20rpx 0 0 0;
  border-bottom: 2rpx solid #f6f6f6;
  text-align: left;
  text-indent: 30rpx;
  font-size: 32rpx;
}

.addrview {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
  margin: 0 0 20rpx 0;
}

.addrlist {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.name {
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0 5rpx 30rpx;
}

.noaddr {
  height: 80rpx;
  line-height: 80rpx;
  color: #aaa;
  margin: 10rpx 0 10rpx 30rpx;
}

.phone {
  margin-left: 40rpx;
}

.address {
  height: 80rpx;
  line-height: 40rpx;
  color: #aaa;
  padding-bottom: 10rpx;
  margin: 5rpx 0 10rpx 30rpx;
}

.bottom-container {
  width: 100%;
  height: 120rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 2
}

.cart-pic {
  width: 120rpx;
  height: 100%;
  border-right: 2rpx solid #f6f6f6
}

.cart-image {
  width: 100%;
  height: 100%;
}

.bottom-info {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  font-size: 32rpx;
  padding: 0 0 25rpx 25rpx;
}

.bottom-settle {
  width: 30%;
  background-color: #d6332a;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn-settle {
  font-size: 34rpx;
}

.margin-right {
  margin-right: 30rpx;
}

.red {
  color: #d6332a;
}

.right-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}

.goods-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.goods-item {
  flex:1;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  border-bottom: 2rpx solid #f6f6f6;
}

.goods-info {
  flex: 0.7;
  display: flex;
  flex-direction: column;
}

.goods-pic {
  flex: 0.3;
  width: 100%;
  height: 100%;
}

.goods-image {
  width: 90%;
  height: 90%;
  margin: 5%
}

.goods-title {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title-text {
  width: 90%;
  height: 100%;
  line-height: 40rpx;
  font-size: 32rpx;
  overflow: hidden;
}

.price {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 5%
}

.count {
  line-height: 40rpx;
  font-size: 32rpx;
  color: #d6332a;
  width: 28rpx;
  text-align: center;
  margin: 0 10rpx;
}

.red-text {
  line-height: 40rpx;
  font-size: 32rpx;
  color: #d6332a;
}

.payType {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.payName {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 10rpx 0 30rpx;
}

.descinput {
  width: 90%;
  height: 60rpx;
  margin: 10rpx 0 10rpx 30rpx;
  font-size: 32rpx;
}