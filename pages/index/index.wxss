/**index.wxss**/
.swiper {
  width: 100%;
  height: 450rpx
}

.slide-image {
  width: 100%;
  height: 450rpx
}

.header {
  width: 100%;
  height: 100rpx;
}

.header-image {
  width: 100%;
  height: 100%;
}

.hot-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.hot-item {
  width: 50%;
  display: flex;
  flex-direction: column;
}

.hot-pic {
  width: 100%;
  height: 340rpx;
}

.hot-image {
  width: 90%;
  height: 90%;
  margin: 5%
}

.hot-title {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title-text {
  width: 90%;
  height: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.price {
  height: 40rpx;
}

.red-text {
  color: #d6332a;
  white-space: nowrap;
  text-overflow: ellipsis;
}