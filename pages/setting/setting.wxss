/* pages/setting/setting.wxss */
.grey-bg {
  background-color: #f6f6f6;
}

.set-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}

.set-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.set-text {
  font-size: 32rpx;
  margin-left: 30rpx;
}

.right-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
}
