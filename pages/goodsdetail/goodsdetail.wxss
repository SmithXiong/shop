/* pages/goodsdetail/goodsdetail.wxss */
.grey-bg {
  background-color: #f6f6f6;
  padding:0 0 20rpx 0;
}

.pic-view {
  width: 100%;
  height: 580rpx;
  text-align: center;
  background-color: #f6f6f6;
}

.goods-image {
  height: 580rpx;
  max-width: 580rpx;
}

.goods-info {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 10rpx 0 10rpx 0;
  margin: 20rpx 0 20rpx 0;
}

.goods-title {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title-text {
  width: 90%;
  height: 100%;
  line-height: 50rpx;
  font-size: 34rpx;
  overflow: hidden;
}

.price {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 5%
}

.red-text {
  line-height: 40rpx;
  font-size: 32rpx;
  color: #d6332a;
}

.action {
  width: 60%;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.action-image {
  width: 48rpx;
  height: 48rpx;
}

.count {
  line-height: 40rpx;
  font-size: 32rpx;
  width: 28rpx;
  text-align: center;
  margin: 0 10rpx;
}

.bottom-container {
  width: 100%;
  height: 120rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 2
}

.bottom-info {
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  font-size: 32rpx;
  padding: 0 0 25rpx 25rpx;
}

.bottom-settle {
  width: 30%;
  background-color: #d6332a;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn-settle {
  font-size: 34rpx;
}

.margin-right {
  margin-right: 30rpx;
}

.red {
  color: #d6332a;
}

.empty {
  height: 120rpx;
}

.grey {
  background-color: #aaa;
}

.bottom-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  border-right:2rpx solid #f1f1f1;
}

.collect-text {
  font-size: 32rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.header {
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 10rpx 0 10rpx 0;
  margin: 20rpx 0 0 0;
  border-bottom: 2rpx solid #f6f6f6;
  text-align: left;
  text-indent: 30rpx;
  font-size: 34rpx;
}

.comment-list {
  margin: 0 0 20rpx 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}

.comment-item {
  padding: 11rpx 0 11rpx 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid #f6f6f6;
}

.head-view {
  display: flex;
  width: 15%;
  height: 100%;
  align-items: flex-start;
  justify-content: center;
}

.head-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.right-view {
  width: 86%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 4%;
}

.score {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.content {
  font-size: 30rpx;
  line-height: 45rpx;
  white-space: wrap;
}

.icon-score {
  width: 30rpx;
  height: 30rpx;
  margin-left: 5rpx;
}